{
  "title": "Stream Relay Go - Monitoring Dashboard",
  "tags": [
    "relay",
    "streaming",
    "llm"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "title": "Request Rate (req/s)",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(relay_requests_total[1m])",
          "legendFormat": "{{route}} - {{status}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "reqps",
          "label": "Requests/sec"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 2,
      "title": "Error Rate",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(relay_requests_total{status=~\"4xx|5xx\"}[1m])",
          "legendFormat": "{{route}} - {{status}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "reqps",
          "label": "Errors/sec"
        },
        {
          "format": "short"
        }
      ],
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [
                0.1
              ],
              "type": "gt"
            },
            "operator": {
              "type": "and"
            },
            "query": {
              "params": [
                "A",
                "5m",
                "now"
              ]
            },
            "reducer": {
              "params": [],
              "type": "avg"
            },
            "type": "query"
          }
        ],
        "message": "Error rate exceeds threshold"
      }
    },
    {
      "id": 3,
      "title": "Request Duration (p50, p95, p99)",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(relay_duration_ms_bucket[1m]))",
          "legendFormat": "p50 - {{route}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(relay_duration_ms_bucket[1m]))",
          "legendFormat": "p95 - {{route}}",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(relay_duration_ms_bucket[1m]))",
          "legendFormat": "p99 - {{route}}",
          "refId": "C"
        }
      ],
      "yaxes": [
        {
          "format": "ms",
          "label": "Duration"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 4,
      "title": "Total Requests by Route",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "relay_requests_total",
          "legendFormat": "{{route}}",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "justifyMode": "auto",
        "orientation": "auto"
      }
    },
    {
      "id": 5,
      "title": "Request Duration Heatmap",
      "type": "heatmap",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "rate(relay_duration_ms_bucket[1m])",
          "legendFormat": "{{le}}",
          "format": "heatmap",
          "refId": "A"
        }
      ],
      "options": {
        "calculate": false,
        "cellGap": 2,
        "cellRadius": 0,
        "color": {
          "exponent": 0.5,
          "fill": "dark-orange",
          "mode": "scheme",
          "reverse": false,
          "scale": "exponential",
          "scheme": "Spectral",
          "steps": 128
        },
        "exemplars": {
          "color": "rgba(255,0,255,0.7)"
        },
        "filterValues": {
          "le": 1e-09
        },
        "legend": {
          "show": true
        },
        "rowsFrame": {
          "layout": "auto"
        },
        "tooltip": {
          "show": true,
          "yHistogram": false
        },
        "yAxis": {
          "axisPlacement": "left",
          "reverse": false,
          "unit": "ms"
        }
      }
    },
    {
      "id": 6,
      "title": "Active Connections",
      "type": "graph",
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 0,
        "y": 24
      },
      "targets": [
        {
          "expr": "relay_active_connections",
          "legendFormat": "{{route}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Connections"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 7,
      "title": "Storage Write Latency",
      "type": "graph",
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 12,
        "y": 24
      },
      "targets": [
        {
          "expr": "rate(relay_storage_write_ms_sum[1m]) / rate(relay_storage_write_ms_count[1m])",
          "legendFormat": "Avg write latency",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "ms",
          "label": "Latency"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 8,
      "title": "Success Rate (%)",
      "type": "gauge",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 30
      },
      "targets": [
        {
          "expr": "sum(rate(relay_requests_total{status=\"2xx\"}[5m])) / sum(rate(relay_requests_total[5m])) * 100",
          "refId": "A"
        }
      ],
      "options": {
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 95
              },
              {
                "color": "green",
                "value": 99
              }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 9,
      "title": "Avg Response Time",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 8,
        "y": 30
      },
      "targets": [
        {
          "expr": "rate(relay_duration_ms_sum[5m]) / rate(relay_duration_ms_count[5m])",
          "legendFormat": "{{route}}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        },
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 1000
              },
              {
                "color": "red",
                "value": 5000
              }
            ]
          }
        }
      }
    },
    {
      "id": 10,
      "title": "Total Requests (5m)",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 16,
        "y": 30
      },
      "targets": [
        {
          "expr": "increase(relay_requests_total[5m])",
          "legendFormat": "{{route}}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    }
  ]
}
