{
  "title": "üöÄ Stream Relay Go - Complete Monitoring",
  "description": "Comprehensive monitoring dashboard with metrics and logs",
  "tags": [
    "relay",
    "streaming",
    "llm",
    "monitoring",
    "logs"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 0,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "üìä Total Requests",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(relay_requests_total)",
          "refId": "A",
          "instant": true,
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          }
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        },
        "textMode": "value_and_name",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "blue",
                "value": null
              },
              {
                "color": "green",
                "value": 10
              },
              {
                "color": "yellow",
                "value": 100
              }
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 2,
      "title": "‚úÖ Success Rate",
      "type": "gauge",
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 4,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(relay_requests_total{status=\"2xx\"}) / sum(relay_requests_total) * 100 or vector(100)",
          "refId": "A",
          "instant": true,
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "orange",
                "value": 90
              },
              {
                "color": "yellow",
                "value": 95
              },
              {
                "color": "green",
                "value": 99
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "‚è±Ô∏è Avg Response Time",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 8,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(relay_duration_ms_sum[1m]) / rate(relay_duration_ms_count[1m])",
          "refId": "A",
          "instant": true,
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 500
              },
              {
                "color": "orange",
                "value": 1000
              },
              {
                "color": "red",
                "value": 3000
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "üîó Active Connections",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(relay_active_connections)",
          "refId": "A",
          "instant": true,
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 10
              },
              {
                "color": "orange",
                "value": 50
              },
              {
                "color": "red",
                "value": 100
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "üö® Error Count",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 16,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(relay_errors_total)",
          "refId": "A",
          "instant": true,
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "orange",
                "value": 10
              },
              {
                "color": "red",
                "value": 50
              }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "üíæ Storage Write Latency",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 20,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(relay_storage_write_ms_sum[1m]) / rate(relay_storage_write_ms_count[1m])",
          "refId": "A",
          "instant": true,
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 50
              },
              {
                "color": "red",
                "value": 100
              }
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "title": "üìà Request Rate Trend",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      },
      "targets": [
        {
          "expr": "sum(rate(relay_requests_total[1m])) * 60",
          "refId": "A",
          "legendFormat": "Requests/min",
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 20,
            "showPoints": "never"
          },
          "color": {
            "mode": "palette-classic"
          },
          "unit": "reqps"
        }
      }
    },
    {
      "id": 8,
      "title": "‚è±Ô∏è Response Time Percentiles",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 4
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(relay_duration_ms_bucket[1m])) by (le))",
          "refId": "A",
          "legendFormat": "p50",
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          }
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(relay_duration_ms_bucket[1m])) by (le))",
          "refId": "B",
          "legendFormat": "p95",
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          }
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(relay_duration_ms_bucket[1m])) by (le))",
          "refId": "C",
          "legendFormat": "p99",
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2
          },
          "unit": "ms"
        }
      }
    },
    {
      "id": 9,
      "title": "üéØ Requests by Route",
      "type": "piechart",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 12
      },
      "targets": [
        {
          "expr": "sum by (route) (relay_requests_total)",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": [
            "value",
            "percent"
          ]
        },
        "pieType": "donut"
      }
    },
    {
      "id": 10,
      "title": "üìä Status Code Distribution",
      "type": "bargauge",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 12
      },
      "targets": [
        {
          "expr": "sum by (status) (relay_requests_total)",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          }
        }
      ],
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "red",
                "value": 10
              }
            ]
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byRegexp",
              "options": "2xx"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "green"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byRegexp",
              "options": "4xx"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "orange"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byRegexp",
              "options": "5xx"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": 11,
      "title": "üö® Error Types",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 12
      },
      "targets": [
        {
          "expr": "sum by (route, type) (relay_errors_total)",
          "refId": "A",
          "format": "table",
          "instant": true,
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "Value",
            "desc": true
          }
        ]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "filterable": false
          }
        }
      }
    },
    {
      "id": 12,
      "title": "üîó Active Connections Over Time",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 12
      },
      "targets": [
        {
          "expr": "sum by (route) (relay_active_connections)",
          "refId": "A",
          "legendFormat": "{{route}}",
          "datasource": {
            "type": "prometheus",
            "uid": "PBFA97CFB590B2093"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "stacking": {
